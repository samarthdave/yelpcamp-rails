<div class="container">
	<div class="col-md-8">
		<div class="thumbnail">
			<%= image_tag(@campground.url, onerror: 'imgerror(this)') %>
			<div class="caption">
				<h4><%= @campground.name %> <small><i><%= if current_user != @user then link_to @user.username, user_path(@user) else link_to "you", user_path(@user) end %></i></small></h4>
				<p><%= @campground.description %></p>
				<% if current_user == @campground.user %>
					<%= link_to 'edit', edit_campground_path(@campground), class: 'btn btn-primary btn-xs' %>
					<%= link_to 'delete', campground_path(@campground), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs' %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-4" id="comments">
		<% if user_signed_in? %>
			<%= render 'comments/new' %>
		<% else %>
			<strong>Login to comment.</strong>
			<br><br>
		<% end %>
		<div class="comments-all">
			<%= render 'comments/index' %>
		</div>
	</div>
	<br><br><br><br><br><br><br><br><br><br>
</div>