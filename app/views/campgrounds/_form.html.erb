<%= form_for @campground do |f| %>
	<h1><%= @name %></h1>
	<div class="form-group">
		<%= f.label :name, class: 'sr-only' %>
		<%= f.text_field :name, class: 'form-control', placeholder: 'Name', autofocus: true %>
	</div>
	<div class="form-group">
		<%= f.label :url, class: 'sr-only' %>
		<%= f.text_field :url, class: 'form-control', placeholder: 'Image url' %>
	</div>
	<div class="form-group">
		<%= f.label :description, class: 'sr-only' %>
		<%= f.text_area :description, class: 'form-control', placeholder: 'Description', rows: '5' %>
	</div>
	<div class="form-group text-left">
		<%= f.submit name, class: 'btn btn-success' %>
	</div>
<% end %>